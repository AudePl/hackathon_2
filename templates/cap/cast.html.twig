{% extends 'base.html.twig' %}

{% block title %}New Cap{% endblock %}

{% block body %}
    <div class="card-defi margin-top d-flex flex-column justify-content-center align-items-center">

        <h2 class="cap">{{ challenge.defi.title}}</h2>
        <h4 class="mt-3">Envoyé à : {{ challenge.catcher.username }}</h4>
        <p class="mt-3 ml-5 mr-5">{{ challenge.defi.description }}</p>
        <p class="mt-3 ml-5 mr-5">Format attendu: {{ challenge.defi.format }}</p>
        <div class="mt-3 mb-3">Nombre de points pour ce défi: <span>{{ challenge.defi.point }}</span></div>

    </div>
{% endblock %}
