{% extends 'base.html.twig' %}

{% block title %}Random Cap{% endblock %}

{% block body %}
    <div class="defi-alea d-flex flex-column justify-content-center align-items-center">
        <div class="infos-group text-center">
            <div class="label">Titre</div>
            <div class="infos">{{ defi.title }}</div>
        </div>
        <div class="infos-group text-center">
            <div class="label">Description</div>
            <div class="infos">{{ defi.description }}</div>
        </div>
        <div class="infos-group text-center">
            <div class="label">Document demand√©</div>
            <div class="infos">{{ defi.format }}</div>
        </div>
        <div class="infos-group text-center">
            <div class="label">Points</div>
            <div class="infos">{{ defi.point }}</div>
        </div>
    </div>
    <div class="unknown-validator d-flex justify-content-center align-items-center">
        <div class="m-4">
            <form action="{{ path('cap_unknown') }}">
                <button class="btn-simple">Autre</button>
            </form>
        </div>
        <div class="m-4">
            <form action="" method="post">
                <input type="hidden" name="title" value="{{ defi.title }}">
                <input type="hidden" name="description" value="{{ defi.description }}">
                <input type="hidden" name="format" value="{{ defi.format }}">
                <input type="hidden" name="point" value="{{ defi.point }}">
                <input type="hidden" name="catcher" value="{{ unknown_user_id }}">
                <button class="btn-simple">Nickel</button>
            </form>
        </div>
    </div>
{% endblock %}