{% extends 'base.html.twig' %}

{% block title %}New Cap{% endblock %}

{% block body %}

    <div class="card-defi margin-top d-flex flex-column justify-content-center align-items-center">
        <div id="well-done" class="effcet justify-content-center align-items-center">
            <img id="well-done-img" src="{{ asset('build/images/well-done.png') }}" alt="Well done"/>
        </div>
        <h2>{{ defi.title }}</h2>
        <h4 class="mt-3">envoyé par : {{ creator.username }}</h4>
        <p class="mt-3 ml-5 mr-5">{{ defi.description }}</p>
        <div class="mt-3 mb-3">nombre de point pour ce défi : <span>{{ defi.point }}</span></div>
        <div class="cap-todo">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="btn-simple mt-3" id="todo-button">C'est réussi ?</div>
            <button class="btn-simple btn-subimited mt-3 ml-5" type="submit">Valider</button>
            {{ form_end(form) }}
        </div>
</div>
{% endblock %}
